# Development Sandbox Environment Configuration for Apache Superset
# 開発サンドボックス環境設定

# Environment Name
SUPERSET_ENV=sandbox

# Container Names (サンドボックス環境)
SUPERSET_CONTAINER_NAME=superset-sandbox
REDIS_CONTAINER_NAME=superset-redis-sandbox
POSTGRES_CONTAINER_NAME=superset-postgres-sandbox

# Network Name
NETWORK_NAME=superset-network-sandbox

# Volume Names
REDIS_VOLUME_NAME=superset-redis-data-sandbox
POSTGRES_VOLUME_NAME=superset-postgres-data-sandbox
SUPERSET_VOLUME_NAME=superset-home-sandbox

# Port Configuration (Default Ports + 1)
SUPERSET_PORT=8089
REDIS_PORT=6380
POSTGRES_PORT=5433

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT_INTERNAL=6379

# Database Configuration (Local PostgreSQL)
# ローカルPostgreSQL接続設定
DATABASE_DIALECT=postgresql
DATABASE_USER=superset
DATABASE_PASSWORD=superset
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_DB=superset

# Local PostgreSQL Configuration
POSTGRES_USER=superset
POSTGRES_PASSWORD=superset
POSTGRES_DB=superset

# Superset Security
SUPERSET_SECRET_KEY=CHANGE_THIS_TO_A_COMPLEX_RANDOM_SECRET_KEY_FOR_SANDBOX

# Superset Configuration
SUPERSET_LOAD_EXAMPLES=yes

# Language Configuration (Japanese as default)
BABEL_DEFAULT_LOCALE=ja
LANGUAGES=ja,en

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@sandbox.local
ADMIN_PASSWORD=admin
ADMIN_FIRSTNAME=サンドボックス
ADMIN_LASTNAME=管理者
