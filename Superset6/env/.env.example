# Apache Superset 6.0.0 Environment Variables Template
# このファイルをコピーして .env.local または .env.azure を作成してください
# Copy this file to .env.local or .env.azure and configure accordingly

# =============================================================================
# Container Configuration
# =============================================================================
CONTAINER_PREFIX=superset6

# =============================================================================
# Database Configuration
# =============================================================================
# For local development (PostgreSQL container)
DATABASE_DIALECT=postgresql
DATABASE_USER=superset
DATABASE_PASSWORD=superset
DATABASE_HOST=superset6-postgres
DATABASE_PORT=5432
DATABASE_DB=superset

# PostgreSQL container settings (local profile only)
POSTGRES_DB=superset
POSTGRES_USER=superset
POSTGRES_PASSWORD=superset
POSTGRES_PORT=5432

# =============================================================================
# Superset Configuration
# =============================================================================
# Environment: development, staging, production
# Controls log level (DEBUG for non-production, INFO for production)
ENV=development

# IMPORTANT: Generate a secure key using: openssl rand -base64 42
SUPERSET_SECRET_KEY=YOUR_SECURE_SECRET_KEY_HERE_CHANGE_ME

# Superset web port
SUPERSET_PORT=8088

# Load example dashboards (set to false for production)
SUPERSET_LOAD_EXAMPLES=false

# Gunicorn workers (recommended: 2 * CPU cores + 1)
GUNICORN_WORKERS=4

# =============================================================================
# Admin User Configuration
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_FIRSTNAME=Admin
ADMIN_LASTNAME=User
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin

# =============================================================================
# Localization
# =============================================================================
BABEL_DEFAULT_LOCALE=ja
LANGUAGES={"ja":"日本語","en":"English"}

# =============================================================================
# Celery Configuration
# =============================================================================
CELERYD_CONCURRENCY=2

# =============================================================================
# Alerts & Reports Configuration
# =============================================================================
ALERT_REPORTS=true
WEBDRIVER_BASEURL_USER_FRIENDLY=http://localhost:8088

# =============================================================================
# SMTP Configuration (for email alerts)
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_STARTTLS=True
SMTP_SSL=False
SMTP_USER=
SMTP_PASSWORD=
SMTP_MAIL_FROM=superset@example.com

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
